@model List<TFB.DTOs.Message>

@{
    Layout = null;
}
<div class="h3 mb-4">Message History</div>
@foreach (var message in Model)
{
    <div class="card mb-2">
        <div class="card-body">
            <div class="row justify-content-between mb-2">
                <strong class="col-4">@message.Author</strong>
                <strong class="col-6 text-uppercase">@message.DatePosted</strong>
            </div>
            <p>
                @message.Value
            </p>
        </div>
    </div>
}